@model IEnumerable<EduPortal.Models.StudentViewModel>

<h2>Студенти</h2>
<a href="/students/create" class="btn btn-primary mb-2">➕ Додати студента</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Ім'я</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Дата народження</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.FirstName @s.LastName</td>
            <td>@s.Email</td>
            <td>@s.PhoneNumber</td>
            <td>@s.DateOfBirth.ToString("yyyy-MM-dd")</td>
            <td>
                <a href="/students/edit/@s.StudentId" class="btn btn-warning btn-sm">Редагувати</a>
                <a href="/students/delete/@s.StudentId" class="btn btn-danger btn-sm">Видалити</a>
            </td>
        </tr>
    }
    </tbody>
</table>