@model EduPortal.Models.StudentViewModel

@{
    ViewData["Title"] = "Редагувати студента";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="mb-3">
    @* Антифрод-токен *@
    @Html.AntiForgeryToken()

    @* Скрытое поле Id *@
    <input asp-for="StudentId" type="hidden" />

    <div class="mb-2">
        <label asp-for="FirstName" class="form-label">Ім'я</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="LastName" class="form-label">Прізвище</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="PhoneNumber" class="form-label">Телефон</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DateOfBirth" class="form-label">Дата народження</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="GetStudents" class="btn btn-secondary ms-2">Скасувати</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}